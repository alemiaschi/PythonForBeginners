import sys


def main(doc):
    file1 = open(doc, 'r', encoding='utf-8')
    data = file1.readlines()

    all_words = []
    for line in data:
        frasi = line.rstrip('\n').split('. ')
        for frase in frasi:
            parole = frase.split(" ")
            for parola in parole:
                if parola != '':
                    all_words.append(parola)

    print(all_words)


main(sys.argv[1])
